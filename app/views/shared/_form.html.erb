<% if form == :session %>
  <% submit_text = "Log in!" %>
<% elsif form == :user %>
  <% submit_text = "Sign up!" %>
<% end %>

<form action="<%= action_url %>" method="POST">
  <%= auth_token %>

  <div>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error|%>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </div>
  
  <div>
    <label for="email-input">Email:</label>
    <input id="email-input" type="email" name="<%= form == :session ? 'session[email]' : 'user[email]'  %>">
  </div>
  
  <div>
    <label for="password-input">Password:</label>
    <input id="password-input" type="password" name="<%= form == :session ? 'session[password]' : 'user[password]' %>">
  </div>

  <div>
    <input type="submit" value="<%= submit_text %>">
  </div>
</form>